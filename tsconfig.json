{
   "compilerOptions": {
      "target": "ES2020",
      "module": "esnext",
      "moduleResolution": "node",
      "outDir": "dist",
      "esModuleInterop": true,
      "allowJs": true,
      "checkJs": false,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "sourceMap": true,
      "incremental": true,
      "noEmit": true
   },
   "include": ["src/**/*", "scripts/**/*", "eslint.config.ts"],
   "exclude": ["node_modules", "dist"]
}
