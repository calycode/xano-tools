{
   "compilerOptions": {
      "target": "ES2020",
      "module": "esnext",
      "moduleResolution": "bundler",
      "outDir": "dist",
      "esModuleInterop": true,
      "allowJs": true,
      "checkJs": false,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "sourceMap": true,
      "incremental": true,
      "composite": true,
      "declaration": true,
      "declarationMap": true
   },
   "references": [
      { "path": "./packages/types" },
      { "path": "./packages/utils" },
      { "path": "./packages/core" },
      { "path": "./packages/cli" }
   ],
   "include": ["src/**/*", "scripts/**/*", "eslint.config.ts"],
   "exclude": ["node_modules", "dist"]
}
