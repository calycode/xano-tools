{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A Xano registry of tables, functions, queries, snippets, etc...",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "homepage": {
            "type": "string",
            "format": "uri"
        },
        "description": {
            "type": "string"
        },
        "items": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "$ref": "https://calycode.com/schemas/registry/registry-item.json"
            }
        }
    },
    "required": [
        "name",
        "homepage",
        "items"
    ]
}